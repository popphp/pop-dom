{
    "name": "popphp/pop-dom",
    "description": "Pop DOM Component for Pop PHP Framework",
    "keywords": [
        "DOM",
        "document object model",
        "dom generation",
        "dom manipulation",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "https://github.com/popphp/pop-dom",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0.0"
    },
    "autoload": {
        "psr-4": {
            "Pop\\Dom\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\Dom\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
